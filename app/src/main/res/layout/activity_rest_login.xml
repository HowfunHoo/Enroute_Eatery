<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.enroute.enroute.MapsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--top bar-->
        <include layout="@layout/layout_top_restbar"/>
        <LinearLayout
            android:id="@+id/relLayout1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/RLoginForm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:orientation="vertical"
                android:layout_marginTop="150dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant Login"
                android:textSize="25sp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="25dp"

                />
                <EditText
                    android:id="@+id/RLoginEmail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Email"
                    android:layout_marginTop="10dp"
                    android:inputType="textEmailAddress"
                    android:visibility="visible"
                    android:textColorHint="@color/gary"
                    />

                <EditText
                    android:id="@+id/RLoginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:visibility="visible"
                    android:textColorHint="@color/gary"
                    />

                <Button
                    android:id="@+id/btn_RLogin"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/btnlogin"

                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="Login"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_Rsignup_link"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign up as a restaurant"
                    android:background="@android:color/transparent"
                    android:textColor="#1976D2"/>




            </LinearLayout>


        </LinearLayout>

        <!--body-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relLayout2"
            android:layout_below="@id/relLayout1">
            <!--<include layout="@layout/m_layout_signin"/>-->
        </RelativeLayout>
        <!--buttom navigation-->
        <include layout="@layout/layout_buttom_navigation_view"/>
    </RelativeLayout>
</LinearLayout>
