<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main" >
    <include layout="@layout/layout_top_profilebar"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp">


        <ImageView
            android:id="@+id/iv_personal_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:contentDescription="@null"
            android:layout_marginLeft="90dp"
            android:src="@drawable/default_personal_image" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Name:"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/iv_personal_icon"/>

        <TextView
            android:id="@+id/profole_phone"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Phone:"
            android:textSize="20sp"
            android:layout_below="@+id/profile_name"/>

        <TextView
            android:id="@+id/profile_Address"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Address:"
            android:textSize="20sp"
            android:layout_below="@+id/profole_phone"/>

        <TextView
            android:id="@+id/profile_preference"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Preference"
            android:textSize="20sp"
            android:layout_below="@+id/profile_Address"/>
    </RelativeLayout>
    <include layout="@layout/layout_buttom_navigation_view"/>

</RelativeLayout>
