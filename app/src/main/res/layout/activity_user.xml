<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/layout_top_profilebar"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/profile_image"
        app:civ_border_color="#000000"
        app:civ_border_width="2dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

    </de.hdodenhof.circleimageview.CircleImageView>
    <ImageButton
        android:id="@+id/btn_edit"
        android:src="@drawable/ic_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorwhite"
        android:layout_alignBottom="@id/profile_image"
        android:layout_toRightOf="@id/profile_image"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/profile_image">
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Name:"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/profole_phone"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Phone:"
            android:textSize="20sp"
            android:layout_below="@+id/profile_name"/>

        <TextView
            android:id="@+id/profile_Address"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Address:"
            android:textSize="20sp"
            android:layout_below="@+id/profole_phone"/>

        <TextView
            android:id="@+id/profile_preference"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Preference"
            android:textSize="20sp"
            android:layout_below="@+id/profile_Address"/>
    </RelativeLayout>
    <include layout="@layout/layout_buttom_navigation_view"/>

</RelativeLayout>
