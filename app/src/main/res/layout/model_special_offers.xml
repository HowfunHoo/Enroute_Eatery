<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_height="100dp"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_rpic"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:contentDescription="TODO"
            android:src="@drawable/no_image_available"/>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Restaurant Name"
                android:id="@+id/tv_rname"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuisine"
                android:lines="1"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:id="@+id/tv_rcuisine"
                android:layout_alignParentRight="true"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_dalcard"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/yellow_check"/>

                <TextView
                    android:id="@+id/tv_rdalcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay by DalCard"
                    android:lines="1"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_roffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offer detail"
                android:textColor="@color/colorGreen"
                android:lines="1"
                android:paddingTop="3dp"
                android:paddingLeft="10dp"
                />



        </LinearLayout>




    </LinearLayout>

</android.support.v7.widget.CardView>